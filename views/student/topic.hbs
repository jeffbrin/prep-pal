<script src="/scripts/chatwindow.js"></script>
<div class="container no-scroll-page">
    <div class="question-div">
        <div class="d-flex justify-content-between align-items-start">
            <p>{{question}}</p>
            <button class="btn image-btn" onclick="toggleChat()">
                <img src="/images/question.png" alt="Button Image" />
            </button>
        </div>
        <textarea class="form-control"></textarea>
    </div>
    <div class="d-flex justify-content-end">
        <button class="btn skip-btn">Skip</button>
    </div>

    <!-- Chat Area -->
    <div class="chat-area">
        <div class="chat-messages">
            <!-- Messages will appear here -->
        </div>
        <input type="text" class="chat-input form-control" placeholder="Type your message...">
        <button class="btn btn-primary send-btn">Send</button>
    </div>
</div>