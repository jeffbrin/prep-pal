<div class="container h-100">
    <div class="row h-100 align-items-center justify-content-center" style="padding-top: 10vh;">
        <div class="col-lg-6 d-none d-lg-flex align-items-center justify-content-end">
            <div class="typewriter mr-lg-4">
                <h2 id="typewriter-text"></h2>
            </div>
        </div>
        <div class="col-lg-6 col-md-12">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center">Signup</h2>
                    <form action="/signup" method="POST">
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" class="form-control" id="username" name="username" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>
                        <div class="mb-3">
                            <label for="confirmPassword" class="form-label">Confirm Password</label>
                            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword"
                                required>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Signup</button>
                        </div>
                    </form>
                    <div class="mt-3 text-center">
                        Already signed up? <a href="/login">Log in!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    const typewriterText = "Hey! I'm PrepPal! I can't wait to study with you!";
    let currentIndex = 0;

    function typeLetter() {
        if (currentIndex < typewriterText.length) {
            document.getElementById("typewriter-text").textContent += typewriterText[currentIndex];
            currentIndex++;
            setTimeout(typeLetter, 100); // Adjust typing speed
        }
    }

    typeLetter(); // Start typing effect
</script>

<style>
    .typewriter h2 {
        font-family: monospace;
        /* Gives a more typewriter-like appearance */
        word-wrap: break-word;
        /* Wrap text to next line */
    }

    .container.h-100 {
        height: 100vh;
        /* Full height of the viewport */
    }

    .row.h-100.align-items-center {
        height: 100%;
        /* Full height of the container */
    }

    .typewriter {
        margin-right: 20px;
        /* Adjust as needed */
        max-width: 100%;
    }

    .card {
        margin-left: 10px;
        /* Adjust as needed */
    }
</style>